import random
def ran(n):
	n= float(n)
	for i in range(0,256):
		x = n*random.random()	
		y = n*random.random()
		z = n*random.random()
		temp = SDL.draw_line(255,0,0, x,y,z, random.random(),random.random(),random.random())

ran(5)
SDL.SDL_global.flip()


