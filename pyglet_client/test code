import SDL
win = SDL.Global()
win.init()
win.set_projection(-1,0,0,0,0)
SDL.draw_line(255,0,0, 0,0,-1, 0,0,1)
win.swap_buffers()

import random
for i in range(0,256):
	x = random.random()
	y = random.random()
	z = random.random()
	temp = SDL.draw_line(255,0,0, x,y,z, random.random(),random.random(),random.random())

win.swap_buffers()


