p = hotshot.Profile("log") #log file name for profiler
p.start()
#code to profile
p.stop()


== Analyzing Data ==

import hotshot, hotshot.stats

stats = hotshot.stats.load("client.log") #"../log/client.log"
stats.strip_dirs()
stats.sort_stats('time', 'calls')
stats.print_stats(20)

# stats.sort_stats('module', 'calls')
# stats.sort_stats('module', ''cumulative'')


